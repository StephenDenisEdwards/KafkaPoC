<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>KafkaConsumer_StrictOrder</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
	<ItemGroup>
		<!-- Kafka client -->
		<PackageReference Include="Confluent.Kafka" Version="2.11.0" />

		<!-- Schema Registry client -->
		<PackageReference Include="Confluent.SchemaRegistry" Version="2.11.0" />

		<!-- Avro Serdes (depends on Apache.Avro internally) -->
		<PackageReference Include="Confluent.SchemaRegistry.Serdes.Avro" Version="2.1.0" />

		<!-- Apache Avro types (GenericRecord, Schema.Parser, etc.) -->
		<PackageReference Include="Apache.Avro" Version="1.11.0" />

		<!-- Polly for retry policies -->
		<PackageReference Include="Polly" Version="7.2.3" />

		<!-- FluentValidation for business‐rule validation -->
		<PackageReference Include="FluentValidation" Version="11.5.0" />
	</ItemGroup>
</Project>
